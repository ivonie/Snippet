<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com.nodomain.ivonne.snippet.services.backgroundActivity"
    android:id="@+id/wait_layout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="@dimen/margen_chico_variable"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ProgressBar
            android:id="@+id/barra_de_espera"
            android:indeterminateTint="@color/colorAccent"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margen_layout_fijo"
            android:textSize="@dimen/texto_chico"
            android:textColor="@android:color/white"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>
